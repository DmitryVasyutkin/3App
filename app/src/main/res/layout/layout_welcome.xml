<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <TextView
        android:id="@+id/greeting_layoutHeader1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/iv_splash_logo"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/welcomeTo"
        android:textSize="20sp"
        android:fontFamily="@font/ubuntu_bold"
        android:gravity="center_horizontal"
        android:layout_marginStart="20dp"/>

    <ImageView
        android:id="@+id/iv_splash_logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greeting_layoutHeader1"
        android:src="@drawable/app_logo"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintHeight_percent="0.25"/>

    <TextView
        android:id="@+id/greeting_layoutMessage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@+id/iv_splash_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greeting_layoutHeader1"
        app:layout_constraintBottom_toBottomOf="@+id/iv_splash_logo"
        android:text="@string/ringtonesforAndroid"
        android:textSize="20sp"
        android:fontFamily="@font/ubuntu_bold"
        android:gravity="start|center_vertical"
        android:layout_marginStart="20dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>